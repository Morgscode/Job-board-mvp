{
  "name": "open-job-board",
  "version": "1.0.0",
  "description": "a minimum viable open-source self-hosted job board system",
  "main": "index.js",
  "scripts": {
    "dev:api": "npm run -w api dev",
    "dev:cms": "npm run -w cms dev",
    "dev:jobfinder-site": "npm run -w jobfinder-site dev",
    "dev:jobboard-graphql": "npm run -w jobboard-graphql dev",
    "dev": "run-p dev:*",
    "build": "npm run build --workspaces",
    "start:api": "npm run -w api start",
    "start:cms": "npm run -w cms start",
    "start:jobfinder-site": "npm run -w jobfinder-site start",
    "start:jobboard-graphql": "npm run -w jobboard-graphql start",
    "start": "run-p start:*"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Morgscode/job-board-project.git"
  },
  "author": "Luke morgan <https://luke-morgan.com/contact>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Morgscode/job-board-project/issues"
  },
  "homepage": "https://github.com/Morgscode/job-board-project#readme",
  "workspaces": [
    "api",
    "cms",
    "jobboard-graphql",
    "jobfinder-site"
  ],
  "dependencies": {
    "npm-run-all": "^4.1.5"
  }
}